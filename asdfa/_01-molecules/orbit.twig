<div class="orbit" role="region" aria-label="{{ entry.title~' Image Gallery' }}" data-orbit="data-orbit" data-auto-play="false">
  <div class="orbit-wrapper">
    <div class="orbit-controls">
      <button class="orbit-previous">
        <span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
      <button class="orbit-next">
        <span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    </div>
    <ul class="orbit-container">

      {% for row in block.galleryImages.all() %}
        <li class="{{ loop.first ? 'is-active orbit-slide' : 'orbit-slide' }}">
          <figure class="orbit-figure">
            {% set image = row.image.one() %}
            <img class="orbit-image" src="{{ image.getUrl('socialImage') }}" alt="{{ row.imageCaption }}">
            <figcaption class="orbit-caption">{{ row.imageCaption }}</figcaption>
          </figure>
        </li>
      {% endfor %}
    </ul>

  </div>
  <nav class="orbit-bullets">
    {% for row in block.galleryImages.all() %}
      <button class="{{ loop.first ? 'is-active' : '' }}" data-slide="{{ loop.index0 }}">
        <span class="show-for-sr">{{ row.imageCaption }}</span>
        {# <span class="show-for-sr" data-slide-active-label="data-slide-active-label">Current Slide</span> #}
      </button>
    {% endfor %}
  </nav>
</div>