{#-
/**
 * Reference
 * - https://foundation.zurb.com/sites/docs/responsive-embed.html
 *
 * Available variables:
 * - responsiveEmbed_attributes: array- href, class, id, etc.
 * Optional variables:
 * - responsiveEmbed_aspectRatio: 'blank, widescreen, or panorama'
      default: 4 by 3,
      widescreen: 16 by 9,
      vertical: 9 by 16,
      panorama: 256 by 81,
      square: 1 by 1
 *
 * Code example
 {% include '_00-atoms/responsiveEmbed' with {
   responsiveEmbed_aspectRatio: 'widescreen',
   responsiveEmbed_attributes: {
    title:'Required for ADA',
    src: 'url',
    width: '420',
    height: '315',
    frameborder: '0',
   }
 } %}

 */
#}

<div class="{{'responsive-embed'~responsiveEmbed_aspectRatio ?? ' '~responsiveEmbed_aspectRatio}}">
  <iframe{{ attr(responsiveembed_attributes) }}{{ 'allowfullscreen'|raw }}></iframe>
</div>